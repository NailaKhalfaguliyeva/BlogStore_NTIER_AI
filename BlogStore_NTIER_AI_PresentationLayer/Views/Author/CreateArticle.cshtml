@model BlogStore_NTIER_AI_EntityLayer.Entities.Article
@{
    ViewData["Title"] = "CreateArticle";
    Layout = "~/Views/Shared/_AuthorLayout.cshtml";
}

<div class="container mt-5">
    <h2>Create a New Article</h2>

    <form asp-action="CreateArticle" method="post" class="mt-4">
        <div class="form-group mb-3">
            <label>Title</label>
            <input asp-for="Title" class="form-control" required />
        </div>

        <div class="form-group mb-3">
            <label>Description</label>
            <textarea asp-for="Description" class="form-control" rows="5" required></textarea>
        </div>

        <div class="form-group mb-3">
            <label>Category</label>
            <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.v">
                <option value="">-- Select Category --</option>
            </select>
        </div>

        <div class="form-group mb-3">
            <label>Image URL</label>
            <input asp-for="ImageUrl" class="form-control" />
        </div>

        <button type="submit" class="btn btn-primary">Save Article</button>
    </form>
</div>